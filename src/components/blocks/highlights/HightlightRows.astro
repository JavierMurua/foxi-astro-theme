---
// Highlights Section
// ------------
// Description: A section with a multiple text and image rows.

// Components
// - UI
import TextImage from '../basic/TextImage.astro'

// Content
import highlight01 from '../../../assets/highlights/highlight-01.svg'
import highlight01mobile from '../../../assets/highlights/highlight-01-mobile.svg'
import highlight02 from '../../../assets/highlights/highlight-02.svg'
import highlight02mobile from '../../../assets/highlights/highlight-02-mobile.svg'
import highlight03 from '../../../assets/highlights/highlight-03.svg'
import highlight03mobile from '../../../assets/highlights/highlight-03-mobile.svg'
import highlight04 from '../../../assets/highlights/highlight-04.svg'
import highlight04mobile from '../../../assets/highlights/highlight-04-mobile.svg'

type HighlightBlock = {
	title: string
	text: string
	image: any
	mobileImage?: any
	imageWidth: number
	imageHeight: number
	imagePosition: 'left' | 'right'
}
const highlightBlocks: HighlightBlock[] = [
	{
		title: 'Mi <strong>vocación</strong> como psicóloga',
		text: 'Soy Priscila Giménez, Licenciada en Psicología, egresada de la Universidad Nacional de Córdoba. Desde el inicio de mi formación, tuve claro que quería ofrecer más que un espacio de escucha: quería brindar un lugar seguro y sin juicios, donde puedas expresarte libremente y descubrir herramientas para afrontar la vida con mayor calidad.',
		image: highlight01,
		imageWidth: highlight01.width,
		imageHeight: highlight01.height,
		mobileImage: highlight01mobile,
		imagePosition: 'right'
	},
	{
		title: 'Mi <strong>formación y experiencia</strong> académica',
		text: 'Durante mi formación, realicé prácticas supervisadas y mi Trabajo Final en Casa del Joven en Córdoba, donde participé en espacios de escucha, talleres terapéuticos y hospital de día, acompañando a jóvenes en procesos de crecimiento y bienestar emocional junto a profesionales de distintas disciplinas.',
		image: highlight02,
		mobileImage: highlight02mobile,
		imageWidth: highlight02.width,
		imageHeight: highlight02.height,
		imagePosition: 'left'
	},
	{
		title: 'Mi <strong>experiencia </strong> profesional',
		text: 'Posteriormente, trabajé en el Hospital Vicente Agüero en Jesús María, donde formé parte de equipos interdisciplinarios, participando en entrevistas y grupos terapéuticos. Esta experiencia me permitió ampliar mi mirada clínica y comprender la importancia de integrar diferentes enfoques según las necesidades de cada persona.',
		image: highlight03,
		mobileImage: highlight03mobile,
		imageWidth: highlight03.width,
		imageHeight: highlight03.height,
		imagePosition: 'right'
	},
	{
		title: 'Mi <strong>enfoque</strong> terapéutico',
		text: 'Mi enfoque es integrativo y personalizado. Si bien mi formación base es psicoanalítica, en cada proceso combino técnicas cognitivas y contextuales adaptadas a lo que cada persona necesita. Trabajo principalmente con adultos y jóvenes que atraviesan situaciones de ansiedad, estrés, dificultades emocionales o que buscan crecer y fortalecer su bienestar emocional.',
		image: highlight04,
		mobileImage: highlight04mobile,
		imageWidth: highlight04.width,
		imageHeight: highlight04.height,
		imagePosition: 'left'
	}
]
---

{
	highlightBlocks.map((highlight, key) => (
		<TextImage
			id={`highlight-${key}`}
			title={highlight.title}
			text={highlight.text}
			image={highlight.image}
			imageWidth={highlight.imageWidth}
			imageHeight={highlight.imageHeight}
			mobileImage={highlight.mobileImage}
			imagePosition={highlight.imagePosition}
			classes={key === 0 ? '!pb-0' : key === highlightBlocks.length - 1 ? '!pt-0' : '!py-0'}
		/>
	))
}
